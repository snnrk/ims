<head>
  <nav class="navbar navbar-inverse navbar-fixed-top">
    <div class="navbar-top"
    <div class="navbar-inner">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#ims-nav-button" aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <%= link_to "IMS", root_path, class: "navbar-brand" %>
      </div>
      <div class="collapse navbar-collapse" id="ims-nav-button">
        <ul class="nav navbar-nav navbar-right">
          <% unless logged_in? %>
            <li><%= link_to t(:signup), '#' %></li>
            <li><%= link_to t(:login), login_path %></li>
          <% else %>
            <li>
              <%= link_to t(:issue), '#' %>
            </li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                <span class="gravatar">
                  <%= gravatar_for current_user , size: 20 %>
                </span>
                <%= current_user.displayname %>
                <span class="caret"></span>
              </a>
              <ul class="dropdown-menu">
                <li>
                  <%= link_to t(:profile), current_user %>
                </li>
                <li role="separator" class="divider"></li>
                <li>
                  <%= link_to t(:logout), logout_path, method: "delete" %>
                </li>
              </ul>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>
</head>