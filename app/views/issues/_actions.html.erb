<div class="btn-group btn-group-sm <%= additional_class %>">
  <%= button_tag class: "btn btn-default dropdown-toggle", "data-toggle": "dropdown" do %>
    <%= title %>
    <%= content_tag :span, nil, class: "caret" %>
  <% end %>
  <ul class="dropdown-menu" role="menu">
    <li>
      <%= link_to content_tag(:i, t(:edit), class: "glyphicon glyphicon-pencil"), edit_issue_path(issue) %>
    </li>
    <li>
      <%= link_to content_tag(:i, t(:delete), class: "glyphicon glyphicon-trash"), issue, method: :delete %>
    </li>
  </ul>
</div>